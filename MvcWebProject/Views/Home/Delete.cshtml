@model MvcWebProject.Models.DeleteViewModel

@{
    ViewBag.Title = "Delete Record";
}

<h2>Delete Record</h2>

<div>
    <h4>Entity</h4>
    @if (TempData["SuccMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccMessage"]
        </div>
    }
    @if (TempData["ErroMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErroMessage"]
        </div>
    }

    <hr />
    @using (Html.BeginForm("Delete", "Home", FormMethod.Post, new { id = "deleteForm" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn btn-danger" id="deleteButton">Delete Record</button>
    }
</div>

@section Scripts {
@Scripts.Render("~/bundles/jqueryval")

<script>
    $(document).ready(function () {
        $('#deleteForm').validate({
            rules: {
                Name: {
                    required: true
                }
            },
            messages: {
                Name: {
                    required: "Please enter a name"
                }
            },
            submitHandler: function (form) {
                var confirmed = confirm("Are you sure you want to delete this record?");
                if (confirmed) {
                    form.submit();
                }
            }
        });
    });
</script>
}


