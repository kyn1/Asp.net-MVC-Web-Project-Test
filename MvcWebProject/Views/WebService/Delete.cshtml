@model MvcWebProject.Models.Entity

@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm("Delete", "WebService", new { id = Model.Id }, FormMethod.Post, new { id = "deleteForm" }))
{
    @Html.AntiForgeryToken()
    <input type="submit" value="Delete" class="btn btn-danger" />
}

@section scripts {
    <script>
        $(function () {
            $("#deleteForm").submit();
        });
    </script>
}
