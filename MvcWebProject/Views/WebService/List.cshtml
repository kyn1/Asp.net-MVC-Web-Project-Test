@model IEnumerable<MvcWebProject.Models.Entity>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Add Persons", "Add")
</p>
@if (TempData["SuccessMessage"] != null)
    {
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
    }
<table class="table">
    <tr>
        <td>ID</td>
        <th>Name</th>
        <th>Surname</th>
        <th>Age</th>
        <th>Action</th>
    </tr>

    @foreach (var entity in Model)
    {
        <tr>
            <td>@entity.Id</td>
            <td>@entity.Name</td>
            <td>@entity.Surname</td>
            <td>@entity.Age</td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = entity.Id }, new { onclick = "return confirm('Are you sure you want to delete this person?');" })
            </td>

        </tr>
    }

</table>
